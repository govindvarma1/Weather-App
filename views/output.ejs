<%- include("partials/header.ejs") %>

<div class="full">
  <nav class="navbar">
    <h2 class="title-logo">MyWeather</h2>
    <form action="/" method="post">
      <input
        class="input"
        type="search"
        name="cityName"
        placeholder="Search"
        aria-label="Search"
      />
      <button class="btn" type="submit" style="height: 26px">Search</button>
    </form>
  </nav>
  <div class="details">
    <div class="temp-details">
      <div class="temp">
        <p class="temp-current"><%=weatherData.main.temp%>℃</p>
        <p><%=weatherData.weather[0].main%></p>
        <p>
          <strong>Day</strong> <%=weatherData.main.temp_max%>℃ .
          <strong>Night</strong> <%= weatherData.main.temp_min%>℃
        </p>
      </div>
      <div class="situation-icon">
        <img
          src="https://openweathermap.org/img/wn/<%=weatherData.weather[0].icon%>@2x.png"
          alt=""
        />
      </div>
    </div>
    <div class="more-details">
      <p>Weather Today in <%=weatherData.name%></p>
      <p style="display: inline-block">Feels Like</p>
      <p style="display: inline-block;" class="temp-current"><%=weatherData.main.feels_like%>℃</p>
      <div class="stats-grid">
        <div class="each-details">
          <p>High/Low</p>
          <p><%=weatherData.main.temp_max%>℃/<%=weatherData.main.temp_min%>℃</p>
        </div>
        <div class="each-details">
          <p>Humidity</p>
          <p><%=weatherData.main.humidity%>%</p>
        </div>
        <div class="each-details">
          <p>Pressure</p>
          <p><%=weatherData.main.pressure%>mB</p>
        </div>
        <div class="each-details">
          <p>Visibility</p>
          <p><%=Math.round(weatherData.visibility/1000)%> KM</p>
        </div>
        <div class="each-details">
          <p>Wind</p>
          <p><%=weatherData.wind.speed%>kmph</p>
        </div>
        <div class="each-details">
          <p>Clouds</p>
          <p><%=weatherData.clouds.all%>%</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
